@model ProductListModel

<form method="post" asp-action="create" class="p-3" enctype="multipart/form-data">

    <div class="form-group">
        <label asp-for="@Model.ProductName">Product Title</label>
        <input class="form-control" asp-for="@Model.ProductName">
    </div>
    <div class="form-group">
        <label asp-for="@Model.StockQuantity">Stock Quantity</label>
        <input class="form-control" type="number" asp-for="@Model.StockQuantity">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Price">Price</label>
        <input class="form-control" type="number" asp-for="@Model.Price">
    </div>
    <div class="form-group">
        <label asp-for="@Model.CategoryId">Category Id</label>
        <input class="form-control" type="number" asp-for="@Model.CategoryId">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Image">Photo</label>
        <input class="form-control"  type="file" asp-for="@Model.Image">
    </div>
    <div class="form-group">
        <label asp-for="@Model.ProductDescription">Description</label>
        <input class="form-control" aria-rowcount="4" asp-for="@Model.ProductDescription">
    </div>
    <button type="submit" class="btn-btn-success">
        Add
    </button>
</form>